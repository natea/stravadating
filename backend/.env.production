# Production Environment Configuration
# Railway will override these with actual values from environment variables
NODE_ENV=production
PORT=3000

# Database Configuration - Railway provides DATABASE_URL
# This is a dummy URL for build time - Railway will override with real URL at runtime
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Redis Configuration (Optional - comment out if not using)
# REDIS_URL will be injected by Railway if available

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Strava API Configuration
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret
STRAVA_REDIRECT_URI=https://api.example.com/auth/strava/callback

# CORS Configuration
FRONTEND_URL=https://app.example.com

# Security & Encryption
ENCRYPTION_KEY=generate-64-char-hex-string
SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry (Optional)
# SENTRY_DSN will be injected by Railway if configured

# Email Service (Optional)
EMAIL_FROM=noreply@stravadating.com
# SENDGRID_API_KEY will be injected by Railway if configured